APP_NAME=chord-extractor
APP_ENV=dev

# Storage
DATA_DIR=./data

# API
FRONTEND_ORIGIN=http://localhost:3000
MAX_UPLOAD_MB=500

# Celery
CELERY_ENABLED=1
REDIS_URL=redis://localhost:6379/0

# Pipeline toggles
ENABLE_DEMUCS=0
DEMUCS_MODEL=htdemucs
DEMUCS_DEVICE=auto

ENABLE_BASIC_PITCH=1
BASIC_PITCH_ONSET_THRESHOLD=0.5
BASIC_PITCH_FRAME_THRESHOLD=0.3
BASIC_PITCH_MIN_NOTE_MS=127.70
BASIC_PITCH_HOP_SEC=0.05

# Chords
CHORD_VOCAB=majmin7   # options: majmin | majmin7
SWITCH_PENALTY=2.5    # higher => less chord changes
MIN_SEGMENT_SEC=0.25

# Grid
BEAT_BACKEND=librosa  # librosa | madmom (hook)
